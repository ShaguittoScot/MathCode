  <body>
    <div class="form-container">
      <form action="/agregarUsuario" method="post" class="form">
        <p class="form-title" style="font-size: 30px;">Crea una cuenta <span style="color: #0e4a8c;">Gratis</span> </p>

        <div class="contenedor-mse">
          <label for="nombre">
            <i class="ocultar circleCrossNombre fa-regular fa-circle-xmark"></i>
            <i class="ocultar circleCheckNombre fa-regular fa-circle-check"></i>
          </label>
          <span class="ocultar mensajeNombre">Nombre no válido</span>
        </div>

        <div class="input-container">
          <input autofocus name="nombre" id="nombre" type="text" placeholder="Nombre de Usuario" required>
        </div>

        <div class="contenedor-mse">
          <label for="correo">
            <i class="ocultar circleCrossCorreo fa-regular fa-circle-xmark"></i>
            <i class="ocultar circleCheckCorreo fa-regular fa-circle-check"></i>
          </label>
          <span class="ocultar mensajeCorreo">Correo no válido</span>
        </div>

        <div class="input-container">
          <input name="correo" id="correo" type="email" placeholder="Correo" required>
        </div>

        <div class="contenedor-mse">
          <label for="contrasena">
            <i class="ocultar circleCrossContrasena fa-regular fa-circle-xmark"></i>
            <i class="ocultar circleCheckContrasena fa-regular fa-circle-check"></i>
          </label>
          <span class="ocultar mensajeContrasena">Contraseña no válida</span>
        </div>

        <div class="input-container">
          <input name="contrasena" id="contrasena" type="password" placeholder="contrasena" required>
        </div>

        <div class="contenedor-mse">
          <label for="confirmarContrasena"></label><span class="ocultar mensajeContrasena">Las contraseñas no
            coinciden</span>
        </div>
        <div class="input-container">
          <input name="confirmarContrasena" id="confirmarContrasena" type="password"
            placeholder="Confirma tu Contrasena" required>
        </div>
          <button type="submit" class="submit">Regístrarse</button>
          <p class="signup-link">
            ¿Ya tienes una cuenta? 
            <a href="/login">Inicia sesión ahora</a>
          </p>
      </form>
    </div>
